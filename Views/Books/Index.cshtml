@model List<Book>

@{
}

<h1>Books</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Authors</th>
            <th></th>
        </tr>
    </thead>    
    <tbody>
        @foreach(var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Description</td>
                <td>@string.Join(",", @book.Authors)</td>
                <td><a href="/Books/View/@book.Id">View</a></td>
            </tr>
        }
    </tbody>
</table>
